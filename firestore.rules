rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Izinkan baca tulis untuk pengguna yang sudah login
    match /lampu_logs/{docId} {
      allow read, write: if request.auth != null;
    }

    // Tambahkan juga jika kamu pakai koleksi "users"
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}